@model Presentation.WebApp.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Inicio - Sistema de Biblioteca";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title"><i class="bi bi-book"></i> Libros</h5>
                            <h2 class="mb-0">@Model.Libros.Count</h2>
                        </div>
                        <i class="bi bi-book fs-1"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-controller="IM253E05Libros" asp-action="Index" class="text-white">
                        <i class="bi bi-arrow-right-circle"></i> Ver todos
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title"><i class="bi bi-people"></i> Usuarios</h5>
                            <h2 class="mb-0">@Model.Usuarios.Count</h2>
                        </div>
                        <i class="bi bi-people fs-1"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-controller="IM253E05Usuarios" asp-action="Index" class="text-white">
                        <i class="bi bi-arrow-right-circle"></i> Ver todos
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title"><i class="bi bi-journal-bookmark"></i> Préstamos</h5>
                            <h2 class="mb-0">@Model.Prestamos.Count</h2>
                        </div>
                        <i class="bi bi-journal-bookmark fs-1"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-controller="IM253E05Prestamos" asp-action="Index" class="text-white">
                        <i class="bi bi-arrow-right-circle"></i> Ver todos
                    </a>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-book"></i> Últimos Libros</h5>
                    <a asp-controller="IM253E05Libros" asp-action="Index" class="text-white">
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var libro in Model.Libros.Take(5))
                        {
                            <div class="list-group-item">
                                <strong>@libro.Autor</strong> - @(libro.Editorial ?? "Sin editorial")
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Últimos Usuarios</h5>
                    <a asp-controller="IM253E05Usuarios" asp-action="Index" class="text-white">
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var usuario in Model.Usuarios.Take(5))
                        {
                            <div class="list-group-item">
                                @usuario.Nombre - @usuario.Correo
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-journal-bookmark"></i> Últimos Préstamos</h5>
                    <a asp-controller="IM253E05Prestamos" asp-action="Index" class="text-white">
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var prestamo in Model.Prestamos.OrderByDescending(p => p.FechaPrestamo).Take(5))
                        {
                            <div class="list-group-item">
                                @prestamo.FechaPrestamo.ToShortDateString() - 
                                @(Model.Usuarios.FirstOrDefault(u => u.Id == prestamo.UsuarioId)?.Nombre ?? "Usuario")
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
            border: none;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .list-group-item {
            transition: all 0.2s;
        }
        .list-group-item:hover {
            background-color: #ff8671;
        }
    </style>
}